<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
    <system.runtime.remoting>
    <application>
      <lifetime leaseTime="0" renewOnCallTime="2S" leaseManagerPollTime="1S"/>
      <channels>
        <channel ref="http" port="1236">
          <clientProviders>
            <formatter ref="binary"/>
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>
      </channels>
      <service>
        <!-- Namespace.Type, Assembly  -->
        <wellknown type="ServerClass.ServerClassImpl, ServerController"
                   mode="Singleton"
                   objectUri="Server.rem"/>
      </service>

      <client>
        <wellknown type="Interface.IManagerServerSide, Interfaces" url="http://localhost:1234/RemServer.rem"/>
      </client>

    </application>
  </system.runtime.remoting>
  
  
</configuration>